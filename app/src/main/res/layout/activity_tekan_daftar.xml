<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".TekanDaftar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_judul"
        android:text="ANDA TELAH TERDAFTAR"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_form"
        android:layout_below="@id/tv_judul"
        android:layout_marginTop="50dp">
        <TableRow>
            <TextView
                android:text="NPM"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/dp_npm"
                android:text="Insert NPM"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Nama"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/dp_nama"
                android:text="Insert Nama"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/dp_jk"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Program Studi"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/dp_prodi"
                android:text="Insert Program Studi"
                android:textColor="@color/black"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>